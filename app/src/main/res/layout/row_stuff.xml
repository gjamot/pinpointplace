<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <ImageButton
        android:id="@+id/img_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/stuff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_icon"
        android:textSize="16dp"
        android:maxLength="15"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Pseudo"
        android:inputType="text"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_group"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp">
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_action_share"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/btn_locate_stuff"
            android:layout_marginRight="5dip">
        </ImageButton>

        <ImageButton
            android:id="@+id/btn_locate_stuff"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_action_stuff_map"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/btn_update"
            android:layout_marginRight="5dip">
        </ImageButton>

        <ImageButton
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_category_handling"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_marginRight="5dip">
        </ImageButton>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_delete_all_stuff"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
        </ImageButton>
    </RelativeLayout>

    <TextView
        android:id="@+id/stuff_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="12dp"
        />

</RelativeLayout>